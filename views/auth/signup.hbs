<link rel="stylesheet" href="/stylesheets/style.css">

<body class="login-signup-page">
<div id="login-sign-up-form"> 
<div class="titles">
  <div class="sign-up">
  <h2 class="sign-up-title">Sign Up</h2>
  <p class="sub-title">Let's get started!</p>
  </div>
  <form class="sign-up-form" action="/auth/signup" method="POST">

    <label> 
      <input type="text" name="username" placeholder="Your username" />
    </label>

    <label>
      <input type="email" name="email" placeholder="Your email" />
    </label>

    <label> 
      <input type="password" name="password" placeholder="Your password" />
    </label>

    <button type="submit" class="signup-btn log-sign-btn">Sign Up</button>


    <div class="go-back-link">
        <p>Want to log in? <a class="log-in-link" href="/auth/login">Log In</a></p> 
    </div>


    {{#if errorMessage}}
      <p class="error">{{errorMessage}}</p>
    {{/if}}
  </form>
   </div>

</body> 